<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m">
	<Dialog id="dAuthTokenConfirmation" type="Message" showHeader="false" class="sapUiSizeCompact">
		<beginButton>
			<Button text="Yes" press="onPressYes"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onPressCancel"/>
		</endButton>
		<VBox alignItems="Center" height="7rem">
			<Title titleStyle="H4" text="Your One time password(OTP) has been sent to your registered mobile number and email id."
				class="sapUiMediumMarginTop"/>
			<Input value=""/>
			<HBox>
			<Button text="Verify"/>
			<Button text="Regenerate OTP"/>
			</HBox>
			<!--<Title titleStyle="H5" text="Do you want to continue?" class="sapUiSmallMarginTop"/>-->
		</VBox>
	</Dialog>
</core:FragmentDefinition>