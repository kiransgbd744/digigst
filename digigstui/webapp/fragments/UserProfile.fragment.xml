<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.f">
	<ResponsivePopover title="Welcome User" showHeader="false" class="sapUiContentPadding" placement="Bottom">
		<endButton>
			<Button id="email" text="Logout" press="handleLogoutPress"/>
		</endButton>
		<HBox>
			<f:Avatar displaySize="S"/>
			<VBox class="sapUiTinyMarginBegin">
				<Text text="{UserInfo>/firstName} {UserInfo>/lastName}" class="sapUiTinyMarginTop"/>
				<Text text="{UserInfo>/name}"/>
			</VBox>
		</HBox>
	</ResponsivePopover>
</core:FragmentDefinition>